<div class="card">
  <div class="card-header">
    <h4>Edit Profile<% resource_name.to_s.humanize %></h4>
  </div>
  <div class="card-body">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
    </div>
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
  
    <div class="field form-group">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Password" %>
      <% if @minimum_password_length %>
        
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
  
    <div class="field form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Password" %>
    </div>
  
    

    <div class="card-body">

  

  <!-- ðŸŒŸ Add your new profile fields here -->
  <div class="mb-3">
    <%= f.label :full_name %>
    <%= f.text_field :full_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :bio %>
    <%= f.text_area :bio, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :profile_image %>
    <%= f.file_field :profile_image, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :cover_image %>
    <%= f.file_field :cover_image, class: "form-control" %>
  </div>
  <!-- ðŸŒŸ Done -->

  <!-- Submit button -->
  

</div>

  <br/>
    <div class="actions">
      <%= f.submit "Update", class:"btn btn-secondary" %>
    </div>
  <% end %>
  </div>
</div>






<br/><br/>

